<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="info"
            type="com.cndll.shapetest.bean.CommodityInfoMode" />
    </data>

    <com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/commodity"
            android:scaleType="fitXY"
            app:layout_heightPercent="30%w"
            app:layout_widthPercent="30%w" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/avatar"
            android:orientation="vertical"
            android:padding="4dp"
            app:layout_heightPercent="30%w"
            app:layout_widthPercent="80%w">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="clip_vertical"
                android:text='@{"￥"+info.price}'
                android:textColor="@color/titleRed"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="clip_vertical"
                android:text='@{"库存"+info.commodityCount}'
                android:textColor="#000000"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="clip_vertical"
                android:text="@{info.choose.goods_type_name}"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <TextView
            android:id="@+id/type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avatar"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:text="口味"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_small"
            app:layout_heightPercent="6%h" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/type_name"
            android:layout_marginBottom="12dp"
            app:layout_heightPercent="8%h" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/recycler"
            android:gravity="center_vertical"
            android:text="购买数量"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_small"
            app:layout_heightPercent="12%h" />

        <include
            android:id="@+id/count_config"
            layout="@layout/goodscountconfig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/recycler"
            app:layout_heightPercent="12%h"
            app:layout_widthPercent="60%w"
            bind:info="@={info}" />

        <Button
            android:id="@+id/sure"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:background="@color/titleRed"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_mid"
            app:layout_heightPercent="18%h" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
</layout>