<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="info"
            type="com.cndll.shapetest.api.bean.response.BrandResponse.DatasBean" />
    </data>

    <com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_heightPercent="50%h"
            app:layout_marginTopPercent="4%h">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@{info.goods_price}"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_size_mid"
                        app:layout_widthPercent="45%w" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@{info.goods_marketprice}"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_size_small"
                        app:layout_widthPercent="55%w" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <TextView
                    android:id="@+id/limit_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="123"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="gone" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_button_limit_notify"
                android:textSize="@dimen/text_size_small"
                android:visibility="gone"
                app:layout_marginBottomPercent="10%h"
                app:layout_marginTopPercent="10%h" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_heightPercent="50%h"
            app:layout_marginTopPercent="4%h">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text='@{"积分："+info.score}'
                android:textColor="#000000"
                android:textSize="@dimen/text_size_small"
                app:layout_widthPercent="35%w" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:drawableRight="@mipmap/right"
                android:gravity="center|right"
                android:text="积分细则"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_small"
                app:layout_paddingRightPercent="1%w"
                app:layout_widthPercent="65%w" />

        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
</layout>