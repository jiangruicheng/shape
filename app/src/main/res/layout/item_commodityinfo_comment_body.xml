<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="info"
            type="com.cndll.shapetest.api.bean.response.CommodityResponse.DatasBean" />

        <variable
            name="comment"
            type="com.cndll.shapetest.api.bean.response.CommodityResponse.DatasBean.CommtentsBean" />
    </data>

    <com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@color/gray" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar"
                android:layout_width="0dp"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"

                android:scaleType="centerInside"
                app:actualImageScaleType="centerInside"
                app:layout_widthPercent="10%w"
                app:placeholderImage="@mipmap/ic_launcher_round"
                app:roundAsCircle="true" />

            <TextView
                android:id="@+id/nick"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_toRightOf="@id/avatar"
                android:gravity="center"
                android:text="@{comment.geval_frommembername}"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_small"
                app:layout_widthPercent="15%w" />

            <RatingBar
                android:id="@+id/rating"
                style="@style/foodRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@id/nick"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:isIndicator="true"
                android:max="5"
                android:numStars="5"
                android:rating="5"
                android:stepSize="1" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/head"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:text="@{comment.geval_content}"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_below="@id/content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                app:actualImageScaleType="centerInside"
                app:placeholderImage="@mipmap/commodity" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                app:actualImageScaleType="centerInside"
                app:placeholderImage="@mipmap/commodity" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                app:actualImageScaleType="centerInside"
                app:placeholderImage="@mipmap/commodity" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                app:actualImageScaleType="centerInside"
                app:placeholderImage="@mipmap/commodity" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@id/image"
            android:gravity="center_vertical"
            android:text='@{comment.geval_addtime}'
            android:textSize="@dimen/text_size_small" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
</layout>