<?xml version="1.0" encoding="utf-8"?>
<layout>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context="com.cndll.shapetest.activity.AddressActivity">
    <include
        android:id="@+id/titlebar"
        layout="@layout/titlebar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%h"
        app:layout_widthPercent="100%w" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="85%h"
        android:layout_gravity="center"
        app:layout_widthPercent="95%w"
        ></ListView>

    <Button
        android:id="@+id/add_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/shape_button_red"
        android:text="增加新地址"
        android:textColor="@color/titleBackGround"
        app:layout_heightPercent="7%h"
        app:layout_textSizePercent="@string/text_size_big"
        app:layout_widthPercent="100%w" />

</com.zhy.android.percent.support.PercentLinearLayout>
</layout>