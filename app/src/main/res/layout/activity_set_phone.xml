<?xml version="1.0" encoding="utf-8"?>
<layout>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context="com.cndll.shapetest.activity.SetPhoneActivity">

    <include
        android:id="@+id/titlebar"
        layout="@layout/titlebar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%h"
        app:layout_widthPercent="100%w" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_heightPercent="9%h"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        app:layout_paddingLeftPercent="5%"
        app:layout_widthPercent="100%w">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="手机号："
            android:textColor="@color/contents_text"
            app:layout_textSizePercent="@string/text_size_big"
            app:layout_widthPercent="20%w" />

        <EditText
            android:id="@+id/phone_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入11位手机号"
            android:inputType="phone"
            app:layout_heightPercent="80%h"
            app:layout_paddingLeftPercent="1%"
            app:layout_textSizePercent="@string/text_size_big"
            app:layout_widthPercent="75%w" />


    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_heightPercent="9%h"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        app:layout_paddingLeftPercent="5%"
        app:layout_widthPercent="100%w">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="验证码："
            android:textColor="@color/contents_text"
            app:layout_textSizePercent="@string/text_size_big"
            app:layout_widthPercent="20%w" />

        <EditText
            android:id="@+id/phone_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入短信验证码"
            app:layout_heightPercent="80%h"
            app:layout_paddingLeftPercent="1%"
            app:layout_textSizePercent="@string/text_size_big"
            app:layout_widthPercent="45%w" />
        <TextView
            android:id="@+id/phone_sed_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:gravity="center"
            android:text="@string/sign_send_code"
            android:textColor="@color/bg"
            app:layout_heightPercent="65%h"
            app:layout_textSizePercent="@string/text_size_big"
            app:layout_widthPercent="30%w" />

    </com.zhy.android.percent.support.PercentLinearLayout>



    <Button
        android:id="@+id/bind_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/shape_button_gray"
        android:text="绑定手机号"
        android:textColor="@color/titleBackGround"
        app:layout_heightPercent="7%h"
        app:layout_marginTopPercent="4%"
        app:layout_textSizePercent="@string/text_size_big"
        app:layout_widthPercent="90%w" />


</com.zhy.android.percent.support.PercentLinearLayout>
</layout>