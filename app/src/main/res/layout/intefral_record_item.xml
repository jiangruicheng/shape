<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_heightPercent="8%h"
        app:layout_marginTopPercent="2%"
        app:layout_paddingPercent="2%"
        app:layout_widthPercent="100%w">

        <TextView
            android:id="@+id/record_time_tx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="时间"
            android:textColor="@color/contents_text"
            app:layout_heightPercent="85%h"
            app:layout_textSizePercent="@string/text_size_big" />

        <TextView
            android:id="@+id/record_type_tx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="类型"
            android:textColor="@color/contents_text"
            app:layout_heightPercent="85%h"
            app:layout_textSizePercent="@string/text_size_big" />

        <TextView
            android:id="@+id/record_fun_tx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="方式"
            android:textColor="@color/contents_text"
            app:layout_heightPercent="85%h"
            app:layout_textSizePercent="@string/text_size_big" />

        <TextView
            android:id="@+id/record_manage_tx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="管理费"
            android:textColor="@color/contents_text"
            app:layout_heightPercent="85%h"
            app:layout_textSizePercent="@string/text_size_big" />

        <TextView
            android:id="@+id/record_account_tx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="积分"
            android:textColor="@color/contents_text"
            app:layout_heightPercent="85%h"
            app:layout_textSizePercent="@string/text_size_big" />

    </com.zhy.android.percent.support.PercentLinearLayout>
</LinearLayout>