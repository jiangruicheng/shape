<?xml version="1.0" encoding="utf-8"?>
<layout>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context="com.cndll.shapetest.activity.RedPacketActivity">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="8%h"
        app:layout_widthPercent="100%w"
        android:background="@color/tabTextSelect"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/pack_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_gravity="center"
            android:src="@mipmap/goback"
            app:layout_marginLeftPercent="5%"
            />

        <TextView
            android:id="@+id/pack_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="发出的红包"
            app:layout_textSizePercent="@string/text_size_big"
            app:layout_heightPercent="100%h"
            app:layout_widthPercent="30%w"
            android:textColor="@color/sit_title_text"
            app:layout_marginLeftPercent="15%"
            />

        <TextView
            android:id="@+id/pack_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收到的红包"
            android:gravity="center"
            app:layout_textSizePercent="@string/text_size_big"
            android:textColor="@color/possible_result_points"
            app:layout_heightPercent="100%h"
            app:layout_widthPercent="30%w"
            />

    </com.zhy.android.percent.support.PercentLinearLayout>


    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        app:layout_heightPercent="35%h"
        app:layout_widthPercent="100%w"
        android:background="@color/white"
        >


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/pack_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            app:layout_marginTopPercent="10%"
            fresco:roundedCornerRadius="45dp"
            fresco:placeholderImage="@mipmap/ic_launcher"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundingBorderColor="@color/white"
            fresco:roundingBorderWidth="1dp"/>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_heightPercent="20%h"
            app:layout_widthPercent="100%w"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/pack_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:layout_marginTop="1dp"
                android:text="小先生"
                android:textColor="@color/contents_text"
                app:layout_widthPercent="50%w"
                app:layout_textSizePercent="@string/text_size_big"
                app:layout_paddingPercent="2%"
                />

            <TextView
                android:id="@+id/pack_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:layout_marginTop="1dp"
                android:text="共发出"
                android:textColor="@color/contents_text"
                app:layout_widthPercent="50%w"
                app:layout_textSizePercent="@string/text_size_big"
                app:layout_paddingPercent="2%"
                />


        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_heightPercent="20%h"
            app:layout_widthPercent="100%w"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/pack_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:layout_marginTop="1dp"
                android:text="1164积分"
                android:textColor="@color/contents_text"
                app:layout_widthPercent="50%w"
                app:layout_textSizePercent="@string/text_size_bigC"
                app:layout_paddingPercent="2%"
                />

            <TextView
                android:id="@+id/pack_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:layout_marginTop="1dp"
                android:text="186个"
                android:textColor="@color/contents_text"
                app:layout_widthPercent="50%w"
                app:layout_textSizePercent="@string/text_size_bigC"
                app:layout_paddingPercent="2%"
                />


        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <ListView
        android:id="@+id/packet_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_marginTopPercent="2%"
        app:layout_paddingPercent="2%"
        ></ListView>


</com.zhy.android.percent.support.PercentLinearLayout>
</layout>