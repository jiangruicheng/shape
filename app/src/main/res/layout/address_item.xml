<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="8%h"
        app:layout_widthPercent="95%w"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/ars_userName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="95%h"
            app:layout_widthPercent="45%w"
            android:gravity="center|left"
            android:text="黄大力"
            android:textColor="@color/contents_text"
            app:layout_textSizePercent="@string/text_size_big"
            />

        <TextView
            android:id="@+id/ars_userPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="95%h"
            app:layout_widthPercent="48%w"
            android:text="黄大力"
            android:gravity="center|right"
            android:textColor="@color/contents_text"
            app:layout_textSizePercent="@string/text_size_big"
            />


    </com.zhy.android.percent.support.PercentLinearLayout>
    <TextView
        android:id="@+id/ars_userAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="6%h"
        android:layout_gravity="center"
        app:layout_widthPercent="95%w"
        android:text="广东省深圳市宝安区"
        android:gravity="center|left"
        android:textColor="@color/text"
        app:layout_textSizePercent="@string/text_size_big"
        />
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/gray"></View>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="8%h"
        android:layout_gravity="center"
        app:layout_widthPercent="95%w"
        android:orientation="horizontal"
        >
        <CheckBox
            android:id="@+id/ars_userChose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:hint="默认收获地址"
            android:textColorHint="@color/titleRed"
            />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/ars_userEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="95%h"
            app:layout_widthPercent="15%w"
            app:layout_marginLeftPercent="35%"
            android:gravity="center|left"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ars_edit"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_heightPercent="95%h"
                app:layout_widthPercent="85%w"
                android:text="编辑"
                android:gravity="center|left"
                android:textColor="@color/text"
                app:layout_textSizePercent="23%w"
                app:layout_marginLeftPercent="3%"
                />
        </com.zhy.android.percent.support.PercentLinearLayout>


        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/ars_userDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="95%h"
            app:layout_widthPercent="15%w"
            android:gravity="center|left"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ars_delete"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_heightPercent="95%h"
                app:layout_widthPercent="85%w"
                android:text="删除"
                android:gravity="center|left"
                android:textColor="@color/text"
                app:layout_textSizePercent="23%w"
                app:layout_marginLeftPercent="3%"
                />
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>



</com.zhy.android.percent.support.PercentLinearLayout>