<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_paddingPercent="2%w">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/shop_sim"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="15%h"
        app:layout_widthPercent="55%w"
        app:layout_marginLeftPercent="2%"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三人行概念店"
            app:layout_textSizePercent="8%w"
            android:textColor="@color/contents_text"
            app:layout_heightPercent="60%h"
            android:gravity="center|left"
            app:layout_widthPercent="90%w"
            />
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="40%h"
            app:layout_widthPercent="90%w"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/shop_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小玲1002件"
                app:layout_textSizePercent="7%w"
                android:textColor="@color/text"
                app:layout_heightPercent="90%h"
                android:gravity="center|left"
                app:layout_widthPercent="50%w"
                />
            <TextView
                android:id="@+id/shop_all_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共1002件"
                app:layout_textSizePercent="7%w"
                android:textColor="@color/contents_text"
                app:layout_heightPercent="90%h"
                android:gravity="center|left"
                app:layout_widthPercent="50%w"
                />


        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <Button
        android:id="@+id/shop_goto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="6%h"
        app:layout_widthPercent="15%w"
        android:layout_gravity="center"
        android:text="进店"
        app:layout_textSizePercent="5%w"
        android:textColor="@color/tabTextSelect"
        android:background="@drawable/shape_main_red_edit"
        />


</com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>