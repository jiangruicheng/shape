<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_paddingPercent="2%w">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/shop_sim"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_widthPercent="55%w"
            android:orientation="vertical"
            app:layout_marginLeftPercent="2%">

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:lines="3"
                android:text="三人行概念店"
                android:textColor="@color/contents_text"
                app:layout_textSizePercent="8%w" />

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shop_account"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="小玲1002件"
                    android:textColor="@color/text"
                    app:layout_textSizePercent="7%w" />

                <TextView
                    android:id="@+id/shop_all_account"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="共1002件"
                    android:textColor="@color/contents_text"
                    app:layout_textSizePercent="7%w" />


            </com.zhy.android.percent.support.PercentLinearLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>

        <Button
            android:id="@+id/shop_goto"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_gravity="center"
            app:layout_widthPercent="13%w"
            app:layout_marginLeftPercent="2%"
            android:background="@drawable/shape_main_red_edit"
            android:text="进店"
            android:textColor="@color/tabTextSelect"
            app:layout_textSizePercent="4%w" />


    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>