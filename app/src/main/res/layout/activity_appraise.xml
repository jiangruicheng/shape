<?xml version="1.0" encoding="utf-8"?>
<layout>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context="com.cndll.shapetest.activity.AppraiseActivity">

    <include
        android:id="@+id/titlebar"
        layout="@layout/titlebar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%h"
        app:layout_widthPercent="100%w" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        app:layout_paddingPercent="3%"
        app:layout_heightPercent="30%h"
        app:layout_widthPercent="100%w"
        android:hint="请输入您的评价"
        android:background="@color/white"
        />

    <com.cndll.shapetest.view.MyGridView
        android:id="@+id/app_imgs_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="4"
        android:layout_gravity="center"
        app:layout_widthPercent="90%w"
        android:scrollbarSize="1px"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:columnWidth="90dp"
        ></com.cndll.shapetest.view.MyGridView>


    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="8%h"
        app:layout_widthPercent="100%w"
        app:layout_marginTopPercent="2%"
        android:background="@color/white"
        android:orientation="horizontal"
        >

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_paddingPercent="3%"
           app:layout_marginLeftPercent="3%"
           app:layout_heightPercent="90%h"
           app:layout_widthPercent="20%w"
           android:layout_gravity="center"
           android:gravity="center"
           android:textColor="@color/contents_text"
           app:layout_textSizePercent="@string/text_size_big"
           android:text="星级："
           />

        <RatingBar
            android:id="@+id/star_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="0"
            app:layout_heightPercent="50%h"
            android:layout_gravity="center"
            android:isIndicator="false"
            android:stepSize ="1"
            style="@style/foodRatingBar"
            />

    </com.zhy.android.percent.support.PercentLinearLayout>


    <Button
        android:id="@+id/appraise_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_button_red"
        android:text="评价"
        app:layout_heightPercent="8%h"
        android:textColor="@color/titleBackGround"
        app:layout_marginTopPercent="5%"
        app:layout_textSizePercent="@string/text_size_big"
        app:layout_widthPercent="80%w" />



</com.zhy.android.percent.support.PercentLinearLayout>
</layout>