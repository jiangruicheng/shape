<?xml version="1.0" encoding="utf-8"?>
<layout>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context="com.cndll.shapetest.activity.ApplyBuyBackActivity">

    <include
        android:id="@+id/titlebar"
        layout="@layout/titlebar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%h"
        app:layout_widthPercent="100%w" />


            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_widthPercent="100%w"
                app:layout_paddingPercent="2%"
                app:layout_marginTopPercent="1%"
                app:layout_heightPercent="13%h"
                android:background="@color/white"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/chat"
                    android:layout_gravity="center"
                    />

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_widthPercent="80%w"
                    app:layout_heightPercent="100%h"
                    app:layout_marginLeftPercent="3%"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/contents_text"
                        android:text="中国银行"
                        android:padding="5dp"
                        app:layout_heightPercent="50%h"
                        app:layout_textSizePercent="@string/text_size_bigC"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/gray"
                        android:text="尾号1234储蓄卡"
                        android:padding="5dp"
                        app:layout_heightPercent="50%h"
                        app:layout_textSizePercent="@string/text_size_big"
                        />



                </com.zhy.android.percent.support.PercentLinearLayout>



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right"
                    android:layout_gravity="center"
                    />


            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_widthPercent="100%w"
                app:layout_paddingPercent="2%"
                app:layout_marginTopPercent="1%"
                app:layout_heightPercent="8%h"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/contents_text"
                    android:text="回购类型"
                    android:padding="5dp"
                    android:gravity="center|left"
                    app:layout_widthPercent="50%w"
                    app:layout_textSizePercent="@string/text_size_big"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/contents_text"
                    android:text="可提激励现积分"
                    android:gravity="center|right"
                    app:layout_widthPercent="45%w"
                    android:padding="5dp"
                    app:layout_textSizePercent="@string/text_size_big"
                    />


            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_widthPercent="100%w"
                app:layout_heightPercent="8%h"
                android:background="@color/white"
                app:layout_paddingPercent="2%"
                app:layout_marginTopPercent="1%"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/contents_text"
                    android:text="积分余额"
                    android:padding="5dp"
                    android:gravity="center|left"
                    app:layout_widthPercent="50%w"
                    app:layout_textSizePercent="@string/text_size_big"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/contents_text"
                    android:text="100.00积分"
                    android:gravity="center|right"
                    app:layout_widthPercent="45%w"
                    android:padding="5dp"
                    app:layout_textSizePercent="@string/text_size_big"
                    />


            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_widthPercent="100%w"
                app:layout_paddingPercent="2%"
                app:layout_marginTopPercent="1%"
                app:layout_heightPercent="8%h"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/contents_text"
                    android:text="可兑换金额"
                    android:padding="5dp"
                    android:gravity="center|left"
                    app:layout_widthPercent="50%w"
                    app:layout_textSizePercent="@string/text_size_big"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/contents_text"
                    android:text="￥100.00"
                    android:gravity="center|right"
                    app:layout_widthPercent="45%w"
                    android:padding="5dp"
                    app:layout_textSizePercent="@string/text_size_big"
                    />


            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                app:layout_heightPercent="23%h"
                app:layout_paddingPercent="2%"
                app:layout_marginTopPercent="1%"
                app:layout_widthPercent="100%w"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/gray"
                    android:text="回购金额"
                    android:padding="5dp"
                    app:layout_heightPercent="25%h"
                    app:layout_textSizePercent="@string/text_size_bigC"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/gray"
                    app:layout_heightPercent="25%h"
                    android:padding="5dp"
                    android:text="提现手续费5元，并将提现金额的4%捐给基金会"
                    app:layout_textSizePercent="@string/text_size_big"
                    />


                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_heightPercent="50%h"
                    app:layout_widthPercent="100%w"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/contents_text"
                        app:layout_heightPercent="70%h"
                        android:gravity="center"
                        android:text="￥"
                        app:layout_widthPercent="10%w"
                        android:padding="5dp"
                        app:layout_textSizePercent="@string/text_size_bigC"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_heightPercent="80%h"
                        android:textColor="@color/gray"
                        android:gravity="center|left"
                        app:layout_widthPercent="90%w"
                        android:padding="5dp"
                        android:inputType="number"
                        android:hint="请输入50的倍数金额"
                        app:layout_textSizePercent="@string/text_size_big"
                        />
                </com.zhy.android.percent.support.PercentLinearLayout>


            </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_heightPercent="8%h"
                    app:layout_paddingPercent="2%"
                    app:layout_marginTopPercent="1%"
                    android:background="@color/white"
                    app:layout_widthPercent="100%w"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/contents_text"
                        android:text="支付密码："
                        app:layout_widthPercent="25%w"
                        app:layout_heightPercent="90%h"
                        android:gravity="center"
                        android:padding="5dp"
                        app:layout_textSizePercent="@string/text_size_big"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/gray"
                        app:layout_widthPercent="75%w"
                        app:layout_heightPercent="90%h"
                        android:gravity="center|left"
                        android:background="@null"
                        android:hint="请输入支付密码"
                        android:inputType="textPassword"
                        app:layout_textSizePercent="@string/text_size_big"
                        />
                </com.zhy.android.percent.support.PercentLinearLayout>


            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_paddingPercent="2%"
                app:layout_marginTopPercent="1%"
                app:layout_paddingLeftPercent="2%"
                app:layout_widthPercent="100%w">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同意"
                    android:textColor="@color/contents_text"
                    app:layout_textSizePercent="@string/text_size_big" />

                <TextView
                    android:id="@+id/apply_deal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="基金捐款协议"
                    android:textColor="@color/titleRed"
                    app:layout_textSizePercent="@string/text_size_big" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shape_button_red"
                android:text="确认回购"
                app:layout_heightPercent="7%h"
                android:textColor="@color/titleBackGround"
                app:layout_marginTopPercent="1%"
                app:layout_textSizePercent="@string/text_size_big"
                app:layout_widthPercent="90%w" />

        </com.zhy.android.percent.support.PercentLinearLayout>

</layout>