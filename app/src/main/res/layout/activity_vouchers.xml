<?xml version="1.0" encoding="utf-8"?>
<layout>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context="com.cndll.shapetest.activity.VouchersActivity">

    <include
        android:id="@+id/titlebar"
        layout="@layout/titlebar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%h"
        app:layout_widthPercent="100%w" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:background="@color/bg"
        android:dividerHeight="6px"
        android:paddingLeft="2px"
        android:paddingRight="2px"
        android:paddingTop="2px"
        android:layout_marginBottom="10px"
        ptr:ptrHeaderTextColor="@color/group_booking"
        ptr:ptrDrawable="@mipmap/phone"
        ptr:ptrMode="both"
        />
    <android.support.design.widget.TabLayout
        android:id="@+id/vouchers_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        app:layout_heightPercent="8%h"
        app:layout_widthPercent="100%w"
        app:tabIndicatorColor="@color/titleRed"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/titleRed"
        app:tabTextColor="@android:color/black"
        app:tabIndicatorHeight="1dp"
        android:visibility="gone"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/vouchers_viewpager"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:visibility="gone"
        />

</com.zhy.android.percent.support.PercentLinearLayout>
</layout>