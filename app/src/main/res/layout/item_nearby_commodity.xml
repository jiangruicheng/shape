<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="2dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        app:actualImageScaleType="centerInside"
        app:layout_widthPercent="35%w"
        app:placeholderImage="@mipmap/commodity"
        app:placeholderImageScaleType="centerInside" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/image"
        android:gravity="center_vertical"
        android:text="豪华套餐"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_small"
        app:layout_heightPercent="50%h" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/image"
        android:gravity="center_vertical"
        android:text="￥120.00"
        android:textColor="@color/titleRed"
        android:textSize="@dimen/text_size_small"
        app:layout_heightPercent="50%h" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_button_limit_buy"
        android:text="预定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small"
        app:layout_heightPercent="25%h"
        app:layout_widthPercent="12%w" />

</com.zhy.android.percent.support.PercentRelativeLayout>